{% extends "template-2.html.twig" %}

{% block head %}
    <h1>Article et commentaires</h1>
{% endblock %}

{% block body %}

    <p><a href="index.php">Retour Ã  la liste des billets</a></p>

        <div class="news">

            <h3>
                {{ post.title|escape }}
                <em>le {{ post.creationDate|date("d/m/Y h:m") }}</em>
            </h3>

                <p>
                    {{ post.content }}
                </p>
        </div>

            <h2>Commentaires</h2>

    <form action="index.php?action=addComment&amp;id={{ post.id }}" method="post">

        <div>
            <label for="author">Auteur</label><br />
            <input type="text" id="author" name="author" />
        </div>

        <div>
            <label for="comment">Commentaire</label><br />
            <textarea id="comment" name="comment"></textarea>
        </div>

        <div>
            <input type="submit" />
        </div>

    </form>


{% for comment in comments %}

<p> {{ comment.author }} le {{ comment.commentDate|date("d/m/Y h:m") }}

    <a href="index.php?action=signalEditComment&amp;id={{ post.id }}&amp;idComment={{ comment.id }}">signaler </a>
    <p>{{ comment.comment }}</p>
{% endfor %}
{% endblock %}
