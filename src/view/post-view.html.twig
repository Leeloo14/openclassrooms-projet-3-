{% extends "template.html.twig" %}

{% block head %}
    <title>Article et commentaires</title>
{% endblock %}

{% block body %}

    <div class="ml-2 mt-3 ">
        <p><a class="textwhite" href="index.php">Retour Ã  l'accueil</a></p>
    </div>

    <div class="container ">

        <h3>
            {{ post.title|escape }}
            <em>le {{ post.creationDate|date("d/m/Y h:m") }}</em>
        </h3>

        <p>
            {{ post.content|raw }}
        </p>


        <div class="container ">
            <h3>Ajouter un commentaire</h3>

            <form action="index.php?action=addComment&amp;id={{ post.id }}" method="post">

                <div>
                    <label for="author">Auteur</label><br/>
                    <input type="text" id="author" name="author"/>
                </div>

                <div>
                    <label for="comment">Commentaire</label><br/>
                    <textarea id="comment" name="comment"></textarea>
                </div>
                <br>
                <div>
                    <input class="btn btn-success" type="submit" value="poster le commentaire"/>
                </div>

            </form>
        </div>


        <div class="container">

            <table class="table table-hover">
                <thead>
                <tr>
                    <th scope="col">Date</th>
                    <th scope="col">Auteur de commentaire</th>
                    <th scope="col">contenu du commentaire</th>
                    <th scope="col">Signaler le commentaire</th>
                </tr>
                </thead>
                <tbody>
                {% for comment in comments %}
                    <tr>
                        <td>le {{ comment.commentDate|date("d/m/Y h:m") }}</td>
                        <td>{{ comment.author|escape }}</td>
                        <td>{{ comment.comment }}</td>
                        <td>


                            <button type="button" class="btn btn-warning active"</button>
                            <a class=" textwhite"
                               href="index.php?action=signalEditComment&amp;id={{ post.id }}&amp;idComment={{ comment.id }}">signaler </a>


                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>


        </div>


    </div>
{% endblock %}
{% block footer %}
{% endblock %}
