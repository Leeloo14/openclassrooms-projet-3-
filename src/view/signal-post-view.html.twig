{% extends "template.html.twig" %}

{% block head %}
    <h1>Article et commentaires</h1>
{% endblock %}

{% block body %}

    <div class="container">
    <p><a href="index.php">Retour Ã  la liste des billets</a></p>

        <div class="news">

            <h3>
                {{ post.title|escape }}
                <em>le {{ post.creationDate|date("d/m/Y h:m") }}</em>
            </h3>

            <p>
                {{ post.content }}
            </p>

        </div>

        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">Date</th>
                <th scope="col">Auteur de commentaire</th>
                <th scope="col">contenu du commentaire</th>
                <th scope="col">Signaler le commentaire</th>
            </tr>
            </thead>
            <tbody>
            {% for comment in comments %}
            {% if currentCommentId==comment.id %}
                <tr>
                    <td>le {{ comment.commentDate|date("d/m/Y h:m") }}</td>
                    <td>{{ comment.author|escape }}</td>
                    <td>{{ comment.comment }}</td>
                    <td>{{ comment.signalement }}</td>
                    <td>


                        <button type="button" class="btn btn-warning active"</button>
                        <a class=" textwhite"
                           href="index.php?action=signalEditComment&amp;id={{ post.id }}&amp;idComment={{ comment.id }}">signaler </a>


                    </td>
                </tr>

            </tbody>
        </table>







            <p><h4>Merci d'indiquer le motif du signalement :</h4></p>

            <form action="index.php?action=signalComment&id={{ post.id }} &idComment= {{ comment.id }}" method="post">
                <textarea id="uComment" name="uComment" autofocus="autofocus">{{ comment.signalement }}</textarea>

                    
                    <button type="button" class="btn btn-warning active"</button>
                    <a class=" textwhite"
                       href="index.php?action=post&amp;id= {{ post.id }}">signaler </a>





            </form>


        {% else %}

            <p> {{ comment.author }} le {{ comment.commentDate|date("d/m/Y h:m") }}
            <p>{{ comment.comment }}</p>

        {% endif %}

    {% endfor %}
    </div>
{% endblock %}
