{% extends "template-2.html.twig" %}

{% block head %}
    <title>Signalement</title>
{% endblock %}

{% block body %}
    <div class=" ml-2 mt-3">
    <p><a class="textwhite"  href="index.php">Retour Ã  l'acceuil</a></p>
    </div>
    <div class="container">

        <h3>
            {{ post.title|escape }}
            <em>le {{ post.creationDate|date("d/m/Y h:m") }}</em>
        </h3>

        <p>
            {{ post.content|raw }}
        </p>


        <div class="container">

            <table class="table table-hover">
                <thead>
                <tr>
                    <th scope="col">auteur</th>
                    <th scope="col">date</th>
                    <th scope="col">contenu du commentaire</th>
                    <th scope="col">Motif du signalement</th>
                    <th scope="col">Signaler le commentaire</th>
                </tr>
                </thead>
                <tbody>
                {% for comment in comments %}

                    {% if currentCommentId==comment.id %}



                        <tr>
                            <td>{{ comment.author }}</td>
                            <td>le {{ comment.commentDate|date("d/m/Y h:m") }}</td>
                            <td>{{ comment.comment }}</td>
                            <td>
                                <form action="index.php?action=signalComment&id={{ post.id }} &idComment= {{ comment.id }}"
                                      method="post">
                                    <textarea id="uComment" name="uComment"
                                              autofocus="autofocus">{{ comment.signalement }}</textarea>
                                    <td>
                                    <button type="submit" class="btn btn-warning textwhite active">Signaler</button>
                                <a href="index.php?action=post&amp;id= {{ post.id }}"></a>

                                </form>

                            </td>
                            </td>

                        </tr>


                    {% else %}

                        <td>{{ comment.author }}</td>
                            <td>le {{ comment.commentDate|date("d/m/Y h:m") }}</td>
                        <td>{{ comment.comment }}</td>

                    {% endif %}

                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
