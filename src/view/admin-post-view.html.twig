{% extends "template-2.html.twig" %}

{% block head %}
    <meta charset="utf-8"/>
    <title> administration </title>
{% endblock %}

{% block body %}
    <div class="regle-4">
    <div class="container">
        <h2>liste des épisodes publiés</h2>



        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">Titre</th>
                <th scope="col">Date de création</th>
                <th scope="col">Modifier l'épisode</th>
                <th scope="col">Supprimer l'épisode</th>
            </tr>
            </thead>
            <tbody>
            {% for post in posts %}
                <tr>
                    <td> {{ post.title|escape }}</td>
                    <td>le {{ post.creationDate|date("d/m/Y h:m") }}</td>
                    <td>

                        <a class="btn btn-warning active textwhite" href="index.php?action=editPost&amp;id={{ post.id }}">Modifier</a>
                    </td>
                    <td>



                        <a class="btn btn-danger active textwhite" href="index.php?action=deletePost&amp;idPost={{ post.id }}">Supprimer</a>



                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="pb-2">

        <a class=" btn btn-success active textwhite" href="index.php?action=displayNewPostAdmin">créer un nouvel épisode</a>



    </div>


</div>




{% endblock %}