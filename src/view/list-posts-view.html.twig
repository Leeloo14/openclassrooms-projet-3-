{% extends "template.html.twig" %}

{% block head %}

    <title>Liste des articles publiés</title>

{% endblock %}

{% block body  %}

    <h1>Bienvenue sur le blog de Jean Forteroche</h1>
    <p>Derniers épisodes publiés :</p>

    {% for post in posts %}

        <div class="news">

            <h3>
                {{ post.title|escape }}
                <em>le {{ post.creationDate|date("d/m/Y h:m") }}</em>
            </h3>

            <p>
                <em><a class="btn btn-info" href="index.php?action=post&amp;id={{ post.id }}">Lire l'épisode</a></em>
            </p>

        </div>


    {% endfor %}



{% endblock %}

{% block footer %}

    <a href="index.php?action=displayInscription" class="mb-2">inscription</a>

    <a href="index.php?action=displayConnection">Connection à l'interface d'administration</a>

{% endblock %}
